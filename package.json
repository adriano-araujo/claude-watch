{
  "name": "claude-watch",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/shared",
    "packages/hook",
    "packages/daemon",
    "packages/app"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "build:shared": "npm run build -w packages/shared",
    "build:hook": "npm run build -w packages/hook",
    "build:daemon": "npm run build -w packages/daemon",
    "dev:daemon": "npm run dev -w packages/daemon",
    "setup": "node scripts/setup.js"
  }
}
